<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="io.indrian16.appcent">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name="io.indrian16.appcent.Appcent"
            android:allowBackup="true"
            android:icon="@drawable/app_icon"
            android:label="@string/app_name"
            android:roundIcon="@drawable/app_icon"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="io.indrian16.appcent.ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="io.indrian16.appcent.ui.main.MainActivity">
        </activity>
        <activity
                android:name="io.indrian16.appcent.ui.detail.DetailArticleActivity"
                android:theme="@style/AppTheme.Normal">
        </activity>
        <activity
                android:name="io.indrian16.appcent.ui.search.SearchActivity"
                android:label="@string/search_activity"
                android:theme="@style/AppTheme.Search">
        </activity>
    </application>

</manifest>